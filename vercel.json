{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "options": {
        "distDir": "dist/spa"
      }
    }
  ],
  "rewrites": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/^/((?!api/|.*\..*).*)",
      "dest": "/index.html"
    }
  ]
}
